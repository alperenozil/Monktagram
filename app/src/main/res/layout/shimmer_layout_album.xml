<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/shimmer_layout_height"
    android:layout_marginTop="@dimen/shimmer_layout_margin_top"
    android:layout_marginBottom="@dimen/shimmer_layout_margin_bottom">

    <View
        android:id="@+id/topView"
        android:layout_width="@dimen/shimmer_layout_top_view_width"
        android:layout_height="@dimen/shimmer_layout_top_view_height"
        android:layout_marginStart="@dimen/shimmer_layout_top_view_margin_start"
        android:layout_marginTop="@dimen/shimmer_layout_top_view_margin_top"
        android:background="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottomView"
        android:background="@color/gray"
        android:layout_width="@dimen/shimmer_layout_bottom_view_width"
        android:layout_height="@dimen/shimmer_layout_bottom_view_height"
        android:layout_marginTop="@dimen/shimmer_layout_bottom_view_margin_top"
        app:layout_constraintStart_toStartOf="@+id/topView"
        app:layout_constraintTop_toBottomOf="@+id/topView" />
</androidx.constraintlayout.widget.ConstraintLayout>